<UserControl x:Class="Personalised_News_Feed.Controls.HistoryTabHeaderControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Personalised_News_Feed.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" x:Name="UC_History_Tab" Loaded="UC_History_Tab_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBlock Text="{Binding tagHeader}" Grid.Column="0"></TextBlock>
        <TextBlock Text="X" Grid.Column="1" Margin="10,0,5,0" x:Name="Tbk_Close_X" MouseUp="Tbk_Close_X_MouseUp" FontWeight="Bold"></TextBlock>
    </Grid>
</UserControl>
