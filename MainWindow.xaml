<Window x:Class="Personalised_News_Feed.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:Personalised_News_Feed.Controls"
        xmlns:resX="clr-namespace:Personalised_News_Feed.Properties"
        mc:Ignorable="d"
        Title="MainWindow" WindowState="Maximized" WindowStyle="ToolWindow"
        FlowDirection="{Binding Mode=OneTime, Source={x:Static resX:Resources.flowDirection}}" x:Name="W_Main_Window" Loaded="W_Main_Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <!-- Main background for side panel-->
        <Grid Grid.Column="0" Background="AntiqueWhite">
            <Grid.RowDefinitions >
                <RowDefinition Height="70"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Text="Profile"/>
            <controls:SideBarItemControl Grid.Row="1" x:Name="Sbic_topics" VerticalAlignment="Top" Title="{x:Static resX:Resources.txt_sidebar_topics}" IsActive="True" IconPath="&#xf086;" MouseUp="Sbic_topics_MouseUp"/>
            <controls:SideBarItemControl Grid.Row="2" x:Name="Sbic_history" VerticalAlignment="Top" Title="Activities" IsActive="False" IconPath="&#xf086;" MouseUp="Sbic_history_MouseUp"/>
            <controls:SideBarItemControl Grid.Row="3" x:Name="Sbic_bookmarks" VerticalAlignment="Top" Title="Bookmarks" IsActive="False" IconPath="&#xf086;"/>
            <ComboBox Grid.Row="5" Name="Cmb_Languages" Height="20" Width="80" VerticalAlignment="Top">
                <ComboBoxItem Content="English"></ComboBoxItem>
                <ComboBoxItem Content="Arabic"></ComboBoxItem>
            </ComboBox>
        </Grid>
        <ContentControl Content="{Binding DisplayUserControl}" Grid.Column="1"/>
        
    </Grid>
</Window>
