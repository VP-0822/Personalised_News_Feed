<Window x:Class="Personalised_News_Feed.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Personalised_News_Feed"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800">
    <Grid Background="Azure">
        <Label HorizontalAlignment="Left" Margin="50,50,0,0"  VerticalAlignment="Top" FontSize="30" Background="Lavender" Height="100" Width="700" Content="Personalised News Feed" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <StackPanel HorizontalAlignment="Left" Height="270" Margin="50,150,0,0" VerticalAlignment="Top" Width="350" Background="Lavender">
            <TextBlock TextWrapping="Wrap" Text="This app learns what news you would like to read around the web. Pick your favorite topics and make a curated news feed." Margin="40,80,40,0" FontSize="16" FontWeight="DemiBold"/>
            <Button Content="Sign Up Now!" FontSize="14" FontWeight="Bold" Background="CadetBlue" Margin="20,50,20,0" Height="40" Width="150"/>
        </StackPanel>
        <Rectangle VerticalAlignment="Stretch" Width="1" Stroke="CadetBlue" Margin="0, 100, 0, 0" Height="200"/>
        <StackPanel HorizontalAlignment="Left" Height="270" Margin="400,150,0,0" VerticalAlignment="Top" Width="350" Background="Lavender" Orientation="Vertical">
            <Label Content="Sign in to explore" FontSize="16" FontWeight="Bold" Margin="40,40,0,0"/>
            <StackPanel Orientation="Horizontal">
                <Label Content="Email address" Margin="40,20,0,10" FontSize="16"/>
                <TextBox Height="23" TextWrapping="Wrap" Text="" Width="170" Margin="20,20,20,10" FontSize="16"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Password" Margin="42,10,0,20" FontSize="16"/>
                <TextBox Height="23" TextWrapping="Wrap" Text="" Width="170" Margin="48,10,20,20" FontSize="16"/>
            </StackPanel>
            <Button Content="Sign In" FontSize="14" FontWeight="Bold" Background="CadetBlue" Margin="170,20,20,0" Height="40" Width="150"/>
        </StackPanel>

    </Grid>
</Window>
