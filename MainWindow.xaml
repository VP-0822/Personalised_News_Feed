<Window x:Class="Personalised_News_Feed.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:Personalised_News_Feed.Controls"
        mc:Ignorable="d"
        Title="MainWindow" WindowState="Maximized" WindowStyle="ToolWindow">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <!-- Main background for side panel-->
        <Grid Grid.Column="0" Background="AntiqueWhite">
            <Grid.RowDefinitions >
                <RowDefinition Height="70"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Text="Profile"/>
            <controls:SideBarItemControl Grid.Row="1" x:Name="Sbic_topics" VerticalAlignment="Top" Title="Topics" IsActive="True" IconPath="&#xf086;"/>
            <controls:SideBarItemControl Grid.Row="2" x:Name="Sbic_history" VerticalAlignment="Top" Title="Activities" IsActive="False" IconPath="&#xf086;"/>
            <controls:SideBarItemControl Grid.Row="3" x:Name="Sbic_activity" VerticalAlignment="Top" Title="Bookmarks" IsActive="False" IconPath="&#xf086;"/>
        </Grid>

        <controls:Topics Grid.Column="1"></controls:Topics>
    </Grid>
</Window>
